<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="@dimen/nav_header_height"
              android:background="@color/colorGray"
              android:gravity="bottom"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:theme="@style/ThemeOverlay.AppCompat.Light">

    <com.facebook.login.widget.ProfilePictureView
        android:layout_gravity="center"
        android:id="@+id/facebook_profile_photo"
        android:layout_width="0dp"
        android:layout_weight="50"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="top"
        android:paddingLeft="8dp"
        android:layout_weight="50"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/facebook_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text="Rustan Corpuz"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Pagadian City"/>

        <Button
            android:id="@+id/logout"
            android:layout_marginTop="16dp"
            style="@style/Base.Widget.AppCompat.Button.BlueButton"
            android:text="@string/com_facebook_loginview_log_out_action"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
